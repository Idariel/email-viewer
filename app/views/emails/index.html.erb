<p id="notice"><%= notice %></p>

<div id="container">

  <div id="listeEmail"
    <h1>Emails</h1>

    <table>
      <thead>
        <tr>
          <th>Objet de l'email</th>
    <!--       <th>Email</th> -->
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @emails.each do |email| %>
          <tr>
            <td><%= link_to email.object, email %></td>
    <!--         <td><%= email.body %></td> -->
            <!-- <td><%= link_to 'Show', email %></td> -->
            <td><%= link_to 'Edit', edit_email_path(email) %></td>
            <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_email' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div><!-- fin listeEmail -->

  <div id="lectureEmail">
    <%= render "show" %>
  </div>

</div> <!-- fin Container -->

<br>

